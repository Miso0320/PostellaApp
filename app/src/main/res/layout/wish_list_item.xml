<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 상품이미지(왼쪽) -->
        <ImageView
            android:id="@+id/pg_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="7dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/photo1" />

        <!-- 상품정보(오른쪽) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <!-- 상품명 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pg_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="내 친구 아기고양이 시리즈"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 할인율, 판매가 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <!-- 할인율 -->
                <TextView
                    android:id="@+id/prd_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="10%"
                    android:textColor="#E81010"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- 판매가 -->
                <TextView
                    android:id="@+id/prd_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="4,000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 삭제, 담기버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 삭제버튼 -->
                <Button
                    android:id="@+id/btn_wish_delete"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="1dp"
                    android:text="삭제"
                    android:textColor="@android:color/black"
                    app:strokeColor="@android:color/darker_gray" />

                <!-- 담기버튼 -->
                <Button
                    android:id="@+id/btn_add_cart"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_cart_purple_24dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="담기"
                    app:strokeColor="#7E57C2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
