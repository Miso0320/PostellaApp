<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdListFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="광고/이벤트"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_ad_1"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:padding="5dp"
                android:background="@drawable/ad_round_coner"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ad_sal_thm" />

            <ImageView
                android:id="@+id/img_ad_2"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:padding="5dp"
                android:background="@drawable/ad_round_coner"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ad_jinair_thm2" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_ad_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="광고 상세페이지로 이동"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>